#!/bin/bash

set -o errexit
set -o pipefail
set -o nounset

# Production Celery worker with memory leak protections
#
# Worker protections:
# --max-tasks-per-child=100 - Restart worker process after 100 tasks
# --max-memory-per-child=2000000 - Restart if worker process exceeds 2GB (in KB)
#
# With prefork pool (default), each CPU gets a worker process.
# Example: 8 CPUs Ã— 2GB = 16GB max total worker memory

exec newrelic-admin run-program celery -A config.celery_app worker --queues=antenna -l INFO --max-tasks-per-child=100 --max-memory-per-child=2000000
